<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleName</key>
    <string>MAI</string>
    <key>CFBundleDisplayName</key>
    <string>MAI Browser</string>
    <key>CFBundleIdentifier</key>
    <string>com.mai.browser</string>
    <key>CFBundleVersion</key>
    <string>1.0.0</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleExecutable</key>
    <string>MAI</string>
    <key>LSMinimumSystemVersion</key>
    <string>13.0</string>
    <key>NSHighResolutionCapable</key>
    <true/>
    <key>NSSupportsAutomaticGraphicsSwitching</key>
    <true/>
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>

    <!-- Permisos para Passkeys/WebAuthn -->
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>MAI Browser necesita Bluetooth para autenticación con passkeys en otros dispositivos</string>
    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>MAI Browser necesita Bluetooth para autenticación con passkeys en otros dispositivos</string>
    <key>NSCameraUsageDescription</key>
    <string>MAI Browser necesita acceso a la cámara para videollamadas y autenticación biométrica</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>MAI Browser necesita acceso al micrófono para llamadas de voz y video</string>

    <!-- Soporte para llaves de seguridad USB -->
    <key>com.apple.developer.web-browser</key>
    <true/>
</dict>
</plist>
